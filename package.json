{
  "name": "@react-audio-studio/core",
  "version": "0.1.0",
  "description": "一个现代化的React音频录制和处理工作台组件库",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.js"
    },
    "./styles": "./dist/style.css"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:watch": "tsc && vite build --watch",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "clean": "rimraf dist",
    "dev:example": "cd examples/antd-example && npm run dev",
    "build:example": "cd examples/antd-example && npm run build",
    "prepare": "npm run build",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vite-plugin-dts": "^3.8.3",
    "vitest": "^1.4.0"
  },
  "dependencies": {
    "recorder-core": "^1.3.2501110"
  },
  "keywords": [
    "react",
    "audio",
    "recording",
    "audio-processing",
    "component-library",
    "typescript"
  ],
  "author": "xipper",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/react-audio-studio.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/react-audio-studio/issues"
  },
  "homepage": "https://github.com/your-username/react-audio-studio#readme"
}
